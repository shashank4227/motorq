<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Wheels - Search Vehicles</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="icon" href="img/tab_logo.png" />

    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/rent.css" />
    <link rel="stylesheet" href="css/search.css">
  </head>
  <body>
    <header style="background-color: black">
      <nav>
        <div class="logoMenu">
          <div>
            <a href="#" class="openbtn" onclick="openNav()">
              <i class="fa-solid fa-bars"></i
            ></a>
          </div>
          <img src="img/logo.png" class="logo" alt="" />
        </div>

        <div id="mySidebar" class="sidebar">
          <!-- Button to close the sidebar -->
          <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"
            >Ã—</a
          >
          <!-- Links -->
          <a href="/owned">Owned Vehicles</a>
          <a href="/latestCars">Latest Releases</a>
          <a href="futureCars">Future Releases</a>
          <a href="/trendingCars">Trending Vehicles</a>
          <a href="/buy_and_sell_cars">Buy Used Vehicles</a>
          <a href="/sell">Sell Used Vehicles</a>
          <a href="/rent">Rent Vehicles</a>
          <a href="/showrooms">Show Rooms</a>
          <a href="/seriveCenters">Service Centres</a>
          <a href="/faqs">FAQs</a>
        </div>
        <div class="menu">
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/contact">Contact</a>
          <a href="/loans">Loans</a>
          <a href="/reviews">Reviews</a>
        </div>

        <div class="social">
          <a href="/search" class="tooltip"
            ><i class="fa-solid fa-magnifying-glass"
              ><span class="tooltiptext">Search</span></i
            ></a
          >
          <a href="/notification" class="tooltip"
            ><i class="fa-solid fa-bell"
              ><span class="tooltiptext">Notifications</span></i
            ></a
          >
         
          <a href="/login" class="tooltip"
            ><i class="fa-solid fa-user">
              <span class="tooltiptext">Login</span>
            </i></a
          >
        </div>
      </nav>
    </header>
    <main>
      <div class="contentParent">
        <div class="content">
          <div>
            <h1 style="padding-top: 30px; padding-left: 50px">
              Search Your Desired Vehicle
            </h1>
          </div>
          <div class="searchAndFilters">
            <form action="/results" method="GET" class="Form"> <!-- Update method to GET -->
              <div class="searchBar">
                <label for="carName"></label>
                <input
                  type="text"
                  id="carName"
                  name="query" 
                  placeholder="Enter Vehicle Name"
                  aria-label="Search for vehicles"              />
                <button type="submit">Search</button>
              </div>
                
              <div class="filters">
                <label for="location"></label>
                <select name="location" id="location" class="filter">
                  <option value="">Select Location</option>
                  <option value="hyderabad">Hyderabad</option>
                  <option value="chennai">Chennai</option>
                  <option value="banglore">Bangalore</option>
                  <option value="mumbai">Mumbai</option>
                  <option value="delhi">Delhi</option>
                </select>
                
                <label for="type"></label>
                <select name="type" id="type" class="filter">
                  <option value="">Select Vehicle Type</option>
                  <option value="car">Car</option>
                  <option value="bike">Bike</option>
                </select>
                
                <label for="budget"></label>
                <select name="budget" id="budget" class="filter">
                  <option value="">Select Budget</option>
                  <option value="below 5,00,000">Below 5,00,000</option>
                  <option value="5,00,000 - 7,50,000">5,00,000 - 7,50,000</option>
                  <option value="20,00,000 - 30,00,000">20,00,000 - 30,00,000</option>
                  <option value="above 50,00,000">Above 50,00,000</option>
                </select>
                
                <label for="brand"></label>
                <select name="brand" id="brand" class="filter">
                  <option value="">Select Brand</option>
                  <option value="tata">Tata</option>
                  <option value="toyota">Toyota</option>
                  <option value="honda">Honda</option>
                  <option value="ford">Ford</option>
                  <option value="chevrolet">Chevrolet</option>
                  <option value="bmw">BMW</option>
                  <option value="audi">Audi</option>
                  <option value="mercedes">Mercedes-Benz</option>
                  <option value="volkswagen">Volkswagen</option>
                  <option value="hyundai">Hyundai</option>
                </select>
                
                <label for="year"></label>
                <select name="year" id="year" class="filter">
                  <option value="">Select Year</option>
                  <option value="0">All Years</option>
                  <option value="2022">2022</option>
                  <option value="2021">2021</option>
                  <option value="2020">2020</option>
                  <option value="2019">2019</option>
                  <option value="2018">2018</option>
                  <option value="2017">2017</option>
                  <option value="2016">2016</option>
                </select>
                
                <label for="fuelType"></label>
                <select name="fuelType" id="fuelType" class="filter">
                  <option value="">Select Fuel Type</option>
                  <option value="All">All Fuel Types</option>
                  <option value="petrol">Petrol</option>
                  <option value="diesel">Diesel</option>
                  <option value="electric">Electric</option>
                  <option value="hybrid">Hybrid</option>
                </select>
              </div>
              
            </form>
            
              
            </div>
          </div>
        </div>
      </div>
    </main>

      <div class="results-container">
        <div class="results">
          <h2>Search Results</h2>
          <div class="cards-container">
            <% if (searchResults.length === 0) { %>
              <p>No Results found</p>
            <% } %>
            
              
            <% searchResults.forEach(result => { %>
              <div class="card">
                <div class="img-container">
                  <img src="<%= result.path %>" alt="Car Image" />
                </div>
                  <h3><%= result.query %></h3>
                  <p>Location: <%= result.location %></p>
                  <p>Type: <%= result.type %></p>
                  <p>Budget: <%= result.budget %></p>
                  <p>Brand: <%= result.brand %></p>
                  <p>Year: <%= result.year %></p>
                  <p>Fuel Type: <%= result.fuelType %></p>
              </div>
          <% }) %>
          </div>
        </div>
      </div>
  

    <script src="js/script.js"></script>
  </body>
</html>
