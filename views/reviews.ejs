                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>

                </select>
              </div>
              <div class="formElement">
                <label for="vehicle-name"></label>
                <input type="text" id="vehicle-name" name="vehicle-name" placeholder="Enter vehicle name" required/>
              </div>
              <div class="formElement">
                <label for="review-title"></label>
                <input type="text" id="review-title" name="review-title" placeholder="Enter Review Title" required/>
              </div>
              <div class="formElement">
                <label for="vehicle-model"></label>
                <input type="text" id="vehicle-name" name="vehicle-model" placeholder="Enter vehicle model" required />
              </div>
              <div class="formElement">
                <label for="date">Select Date</label>
                <input type="date" id="date" name="">
              </div>
            </div>
            
            <div class="formElement">
              <label for="comment"></label><br />
              <textarea
                id="comment"
                name="comment"
                rows="4"
                cols="50"
                placeholder="Enter your comment here"
                required
              ></textarea>
            </div>
           
            <button type="submit">Submit</button>
          </form>
